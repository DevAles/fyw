#!/bin/zsh

PKG="fypm"

# Fypm
alias tir="$PKG timew track"
alias tistart="$PKG timew start"
alias tiend="$PKG timew end"
alias ticart="$PKG timew start-correction"
alias ticend="$PKG timew end-correction"

# TaskWarrior
alias twui="taskwarrior-tui"
alias tals="_tals blist"
alias talss="_tals alarms"
alias ttals="task TYPE.not:SubTask -Ghost list"
alias taconls="task TYPE:Continuous description.hasnt:Versionamento -Divisory list"
alias taconlss="task TYPE:Continuous description.hasnt:Versionamento -Divisory all"
alias tagoals="_tadatels GOAL goals"
alias tagoalss="_tadatels GOAL all-goals"
alias taduels="_tadatels due list"
alias taduelss="_tadatels due all"
alias taals="_tadatels ALARM list"
alias taalss="_tadatels ALARM all"
alias taschls="_tadatels scheduled list"
alias taschlss="_tadatels scheduled all"

# TimeWarrior
alias tiils='timew summary :ids'

